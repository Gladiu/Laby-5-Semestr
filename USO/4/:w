import numpy as np 
import scipy.signal as sig 
from scipy.integrate import solve_ivp 
import matplotlib.pyplot as plot

# Zadanie 2.1
# -y -> max
# ogr.
# 2x-y <=  4
# y+x  >   3
# y+4x >= -2
#
# y >= -4+2x
# y > 3-x
# y >= -2-4x

x = np.linspace(-10, 10, 100)

y1 = x*2-4
y2 = -x+3
y3 = -x*4-2
plot.plot(x, y1, color='green')
plot.plot(x, y2, color='green')
plot.plot(x, y3, color='green')


plot.show()
